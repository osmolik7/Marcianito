<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.osmolik.marcianito.MainActivity"
    android:gravity="top|center">


    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:contentDescription="@string/fondo"
        android:layout_alignParentTop="true"
        android:src="@drawable/fondo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:id="@+id/textView2"
        android:ems="10"
        android:textColor="@color/titulo"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColorHighlight="#fdfbfb"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/boton"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/boton"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:width="1dp"
        android:background="@drawable/abc_btn_default_mtrl_shape"
        android:layout_marginTop="146dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
